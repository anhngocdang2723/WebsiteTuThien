@model WebsiteTuThien.Models.Kind

@{
    ViewData["Title"] = "Sửa";
    Layout = "/Views/Shared/_Admin.cshtml";
}

<h1>Sửa đồ dùng</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KindId" />
            <div class="form-group">
                <label asp-for="KindName" class="control-label"></label>
                <input asp-for="KindName" class="form-control" />
                <span asp-validation-for="KindName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfKind" class="control-label"></label>
                <input asp-for="AmountOfKind" class="form-control" />
                <span asp-validation-for="AmountOfKind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointOfKind" class="control-label"></label>
                <input asp-for="PointOfKind" class="form-control" />
                <span asp-validation-for="PointOfKind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
